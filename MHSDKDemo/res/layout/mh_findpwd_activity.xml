<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color" >
    
    <RelativeLayout android:id="@+id/findpwd_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/mh_title_bg"
        android:orientation="horizontal">
        <Button android:id="@+id/findpwd_back"
            android:layout_width="54dp"
            android:layout_height="32.0dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/mhsdk_back"
            android:textSize="16.0sp"
            android:textColor="@color/button_color"
            android:shadowDy="2"
            android:shadowDx="0"
            android:shadowRadius="1"
            android:background="@drawable/mh_back_selected"/>
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mhsdk_findPwd"
            android:textColor="@color/button_color"
            android:textSize="20.0sp"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
    
    <WebView android:id="@+id/findpwd_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/findpwd_title"
        android:tag="0"/>
        

</RelativeLayout>